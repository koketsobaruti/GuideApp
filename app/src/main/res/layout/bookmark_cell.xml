<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="372dp"
    android:orientation="horizontal"
    android:layout_height="258dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@drawable/rounded_bookmarks_square"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pushId"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:textColor="#05FFFFFF" />

            <ImageView
                android:id="@+id/deleteBookmarkBtn"
                android:layout_width="37dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/ic_baseline_close_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Location : "
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/locationBookmarked"
                android:layout_width="258dp"
                android:layout_height="38dp"
                android:text="Location text"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Description : "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/descriptionBookmarked"
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:text="Description text"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Address : "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/addressBookmarked"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:text="Address text"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="154dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bookmarked on "
                android:textColor="#75685C"
                android:textSize="15dp" />

            <Space
                android:layout_width="43dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="68dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date :"
                android:textColor="#303C43"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dateBookmarked"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:background="#00FF9800"
                android:gravity="left"
                android:text="Date"
                android:textColor="#FF9800"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time :"
                android:textColor="#303C43"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/timeBookmarked"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:background="#00FF9800"
                android:gravity="left"
                android:text="time"
                android:textColor="#FF9800"
                android:textSize="15dp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>