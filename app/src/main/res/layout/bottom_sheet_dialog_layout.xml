<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/locationSelectedTxt"
                android:layout_width="271dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:text="Location Name"
                android:textColor="@color/black"
                android:textSize="31dp" />

            <ImageView
                android:id="@+id/bookmarkLocation"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_bookmark_border_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/addressSelectedTxt"
                android:layout_width="374dp"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:padding="5dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/operatingHoursLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Opening hours: "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/openingHoursTxt"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="8dp"
                android:text="Opening hours: "
                android:textColor="@color/black"
                android:textSize="18dp"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/unfilled_star"
                android:padding="8dp"
                android:text="Rating :"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ratingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:text="rating given"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/ic_baseline_phone_24" />

            <TextView
                android:id="@+id/contactTxt"
                android:layout_width="321dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="Phone number"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Directions"
                app:backgroundTint="#3B9BE8" />


        </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>